{
  "name": "@mayrlabs/genesis",
  "version": "1.0.0",
  "private": false,
  "description": "Interactive CLI to setup project tools",
  "keywords": [
    "cli",
    "eslint",
    "husky",
    "prettier",
    "scaffold",
    "setup"
  ],
  "homepage": "https://github.com/MayR-Labs/mayrlabs-js/tree/main/packages/genesis#readme",
  "bugs": {
    "url": "https://github.com/MayR-Labs/mayrlabs-js/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Aghogho Meyoron",
    "email": "youngmayor.dev@gmail.com",
    "url": "https://mayrlabs.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MayR-Labs/mayrlabs-js.git",
    "directory": "packages/genesis"
  },
  "bin": {
    "genesis": "dist/genesis.cjs"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "package.json"
  ],
  "type": "commonjs",
  "main": "dist/genesis.cjs",
  "module": "dist/genesis.mjs",
  "exports": {
    ".": {
      "import": "./dist/genesis.mjs",
      "require": "./dist/genesis.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "pkg:dev": "tsdown --watch",
    "lint": "eslint . --max-warnings 0",
    "demo": "tsx src/cli/index.ts",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@clack/prompts": "^0.7.0",
    "@topcli/prompts": "^2.4.1",
    "cli-spinners": "^3.4.0",
    "commander": "^11.1.0",
    "execa": "^8.0.1",
    "figlet": "^1.10.0",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "^0.0.0",
    "@mayrlabs/core": "*",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.16",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "tsdown": "^0.20.3",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  }
}
