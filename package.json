{
  "name": "mayrlabs-js",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MayR-Labs/mayrlabs-js.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format:prettier": "prettier --write \"**/*.{ts,tsx,md,js}\"",
    "format": "oxfmt --check",
    "format:fix": "oxfmt .",
    "check-types": "turbo run check-types",
    "release": "npx changeset publish --provenance",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.31.0",
    "prettier": "^3.7.4",
    "turbo": "^2.8.3",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.8.0"
}
